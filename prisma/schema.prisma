// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model user {
  id String @id @default(cuid())
  username String @unique
  email String
  password String
  name String
  age String
  permission Int @default(1)
  verified Boolean @default(false)
  tutor Boolean @default(false)
  saltA String
  saltB String
}

model profile {
  id  String @id @default(cuid())
  relatedUsername String
  certifications  String[] @default([])
  hoursEarned Int @default(0)
  minutesEarned Float @default(0.00)
  hoursLearnt Int @default(0)
  minutesLearnt Int @default(0)
  sessionsAttended Int @default(0)
  sessionsHosted Int @default(0)
}

model session {
  id  Int @id @default(sequence())
  sessionName String
  sessionTime String
  sessionDuration Int
  maxUsers Int
  hostUsername String
  hostFirstName String
  spaceID Int
  ended Boolean @default(false)
  registeredUsers Int @default(1)
}

model sessionRegistrations {
  id String @id @default(cuid())
  sessionID Int
  studentID String
}